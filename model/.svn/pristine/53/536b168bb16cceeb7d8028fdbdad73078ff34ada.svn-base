body {
  /*font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;*/
  font-family: "微软雅黑";
  font-size: 14px;
  line-height: 1.42857143;
  color: #333;
  background-color: #fff;
}
html,body{
  height: 100%;
  background: #333333;
}

/*表单默认属性*/
input::-webkit-input-placeholder{
  color: #cccccc;opacity:1;
}
textarea::-webkit-input-placeholder{
  color: #cccccc;opacity:1;
}

input,textarea{
  border-color:#CCCCCC;
  font-size: 14px;
  line-height: 26px;
  resize: none;
  outline:none;
  border:1px solid #CCCCCC;
  font-family:微软雅黑;
  text-indent: 10px;
}
textarea:focus{
  border-color:#D6A003;
}
input:focus{
  border-color:#D6A003;
}


input{
  background: transparent;
}
header{
  background: #000;
  .header-main{
    width:1280px ;
    min-width: 1280px;
    margin: 0 auto;
    height:80px;
  }
  .header-left{
    float: left;
    height:80px;
    line-height: 80px;
    a{
      color: #919191;
      border: 1px solid #919191;
      border-radius:5px;
      font-size:13px;
      display: block;
      float: left;
      padding: 3px;
      line-height: 13px;
      margin-top: 30px;
    }
    img{
      display: block;
      float: left;
      line-height: 13px;
      position: relative;
      top: 23px;
      margin-right: 15px;
    }
  }
  .header-right{
    float: right;
    height:80px;
    p{
      color: #919191;
      line-height: 80px;
      font-size:13px;
      span{
        color: #D6A93C;
        font-size:18px;
        margin-left: 15px;
      }
    }
  }
}
.main{
  padding-bottom: 50px;
  background: #333333;

  .login-box{
    width: 870px;
    margin: 0 auto;
    padding: 40px 0 60px 0;
    .main-box{
      background: white;

    }
    .box-head{
      height: 20px;
      background: #E6BE35;
    }
    .box-main{
      padding:40px 0 50px 0 ;
      background: url(../images/login-register/bg.png) no-repeat;
      background-position: 0 -100px;
      .box-main-p1{
        color: #E6BE35;
        text-align: center;
        font-size:30px;
        margin-bottom: 50px;
      }
      .box-main-p3{
        width: 510px;margin: 0 auto;
        margin-bottom: 25px;
        position: relative;
        .input-left{
          display: inline-block;
          width: 60px;
          text-align: right;
          margin-right: 15px;
        }
        input{
          height: 40px;
          text-indent:5px;
          width:400px;
        }
        input:focus{
          outline:none;
          border-color:#E6BE35;
        }
        .yzm{
          width: 283px;
        }
        .yzm-btn{
          display: inline-block;
          line-height: 40px;
          width: 90px;
          text-align: center;
          margin-left: 20px;
          border: 1px solid #919191;
          position: relative;
          top: 2px;
        }
      }
      .zc-btn{
        width: 266px;
        line-height: 50px;
        text-align: center;
        margin: 0 auto;
        margin-top: 65px;
        background: #DBA02D;
        color: white;
        cursor: pointer;
        border-radius:1px;
      }
      .zc-btn:active{
        background: #B38608;
      }
      .box-main-p4{
        width: 200px;
        margin: 0 auto;
        margin-top: 20px;
        font-size:14px;
        color: #E6BE35;
        text-align: center;
      }
      .box-main-p5{
        width: 535px;
        margin: 50px auto 0 auto;
        div,span{
          display: block;
          float: left;
          font-size:14px;
        }
        .hr3{
          width: 200px;
          height: 1px;
          background: #919191;
          position: relative;
          top: 10px;
        }
        span{
          margin: 0 25px;
        }
      }
      .box-main-p6{
        width: 475px;
        margin: 50px auto 0 auto;
        a{
          display: block;
          float: left;
          width: 55px;
          line-height: 55px;
          border-radius: 50%;
          text-align: center;
          margin: 0 50px;
        }
        i{
          font-size:30px;
          color: white;
        }
        .blue{
          background: #6BB2F9;
        }
        .green{
          background: #4AB453;
        }
        .red{
          background: #EF5563;
        }
      }
    }
  }
  .zm{
    color: #919191;
    text-align: center;
    margin: 0 auto;
  }
}
