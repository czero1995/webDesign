@white: #fff;
@grey: #ccc;
@red: red;
@black: #000;
@background: #FAF7FA;
@textcolor: #000;
@textsize: .28rem;
#app{
    height: 100%;
    background: @white;
    overflow: hidden;
}
.container {
    
    align-items: flex-start;
    height: 100%;
    
}

.leftbar {
    width: 30%;
    height: 100%;
    background: @background;
    text-align: center;
    border-right: 1px solid @grey;
}

.barItem {
    border-bottom: 1px solid @grey;
    height: .88rem;
    line-height: .88rem;
    width: 100%;
    margin: 0;
}

.active.menu-text {
    color: @red;
    border-left: 4px solid @red;
    background: @white;
}

.rightContent {
    width: 70%;
    height: 100%;
    overflow: auto;
}

.rightItem:nth-last-child(1){
    margin-bottom: 0.88rem;
}
.category-item {
    padding: .1rem;
    border-bottom: 1px solid @grey;
    height: 2.3rem;
    align-items: flex-start;
}

.goods-img {
    width: 2rem;
    height: 2rem;
    margin-right: .2rem;
    img {
        width: 100%;
        height: 100%;
    }
}
.goods-name{
    margin: .1rem 0;
}
.goods-textBox {
    text-align: left;
    flex: 1;
    width: 45%;
    font-size: @textsize;
    padding-right: .2rem;
}


.goods-coach {
    color: @red;
    font-size: @textsize;
}
.goods-cartBox {
    text-align: right;
    img {
        width: .4rem;
        height: .4rem;
    }
}
