.container {
  background: #faf7fa;
  height: 100%;
}
.chooseAddress {
  margin-top: .2rem;
  background: #ffffff;
  border: 1px solid #cccccc;
  padding: .2rem;
}
.chooseAddress img {
  vertical-align: middle;
  width: .4rem;
  height: .4rem;
}
.chooseAddress p {
  margin-left: .2rem;
}
.addressBox {
  margin: .2rem 0;
  padding: .3rem;
  border: 1px solid #cccccc;
  background: #ffffff;
}
.addressBox img {
  margin-right: .3rem;
  width: .4rem;
  height: .4rem;
}
.address-text {
  width: 100%;
}
.address-location {
  margin-top: .2rem;
}
.order-item {
  border-bottom: 1px solid #cccccc;
  padding: .2rem;
  align-items: flex-start;
  background: #ffffff;
}
.order-image {
  height: 2rem;
  width: 2rem;
  margin-right: .2rem;
}
.order-image img {
  width: 2rem;
  display: block;
  height: 100%;
}
.order-text {
  width: 100%;
}
.order-textBox {
  flex: 1;
  align-items: flex-start;
  text-align: left;
  width: 62%;
}
.order-textBox .orderText p {
  margin-bottom: .15rem;
}
.order-name {
  text-align: left;
  font-size: 0.28rem;
}
.order-coach {
  text-align: right;
  color: #ff0000;
  font-size: 0.28rem;
  margin: .3rem 0;
}
.order-num {
  text-align: right;
  font-size: 0.28rem;
}
.submitOrder {
  background: #ff0000;
  color: #ffffff;
  width: 2.6rem;
  text-align: center;
}
.shopCoach {
  color: #ff0000;
}
