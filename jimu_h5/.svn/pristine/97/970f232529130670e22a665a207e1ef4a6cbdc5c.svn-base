@white: #fff;
@grey: #ccc;
@red: red;
@black: #000;
@background: #FAF7FA;
@textcolor: #000;
@textsize:.28rem;
.container{
    background: @background;
    height: 100%;
}
   .chooseAddress{
     margin-top: .2rem;
    background: @white;
    border: 1px solid @grey;
    padding: .2rem;
    img{
        vertical-align: middle;
        width: .4rem;
        height: .4rem;
    }
    p{
        margin-left: .2rem;
    }
} 
 .addressBox{
     
    margin: .2rem 0;
    padding: .3rem;
    border: 1px solid @grey;      
    background: @white;
    img{
        margin-right: .3rem;
        width: .4rem;
        height: .4rem;
    }
 }
 .address-text{
     width: 100%;
 }
 .address-location{
     margin-top: .2rem;
 }
 .order-item {
    border-bottom: 1px solid @grey;
    padding: .2rem;
    align-items: flex-start;
    background: @white;
}
.order-image {
    height: 2rem;
    width: 2rem;
    margin-right: .2rem;
    img {
        width: 2rem;
        display: block;
        height: 100%;
    }
}
.order-text{
    width: 100%;
}

.order-textBox {
    flex: 1;
    align-items: flex-start;
    text-align: left;
    width: 62%;
    .orderText p {
        margin-bottom: .15rem;
    }
}
.order-name{
    text-align: left;
    font-size: @textsize;
}
.order-coach {
    text-align: right;
    color: @red;
    font-size: @textsize;
    margin: .3rem 0;
}
.order-num{
    text-align: right;
    font-size: @textsize;
}

.submitOrder{
    background: @red;
    color:@white;
    width: 2.6rem;
    text-align: center;
}
.shopCoach{
    color:@red;
}
