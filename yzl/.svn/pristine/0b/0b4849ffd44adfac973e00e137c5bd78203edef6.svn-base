{extend name="common/base"}
{block name="css"}
<link href="__STATIC__/admin/upload/css/iconfont.css" rel="stylesheet" type="text/css"/>
<link href="__STATIC__/admin/upload/css/fileUpload.css" rel="stylesheet" type="text/css">
{/block}
{block name="content-header"}
<link rel="stylesheet" href="__STATIC__/admin/plugins/select2/select2.min.css">
    <h1>
        {$module_names[0]}
        <small>
        {$module_names[1]}</small>
    </h1>
    <ol class="breadcrumb">
        {volist name="module_names" id="vo"}
            <li {if condition="$module_nums==$key"}class="active"{/if}>{if condition="0==$key"}<i class="fa fa-dashboard"></i>{/if} {$vo}</li>
        {/volist}
    </ol>
{/block}

{block name="content"}
        <div class="row">
            <div class="container-fluid">
                <div class="pull-right">
                    <a href="javascript:history.go(-1)" data-toggle="tooltip" title="" class="btn btn-default" data-original-title="返回列表"><i class="fa fa-reply"></i></a>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-list"></i> 编辑场馆</h3>
                    </div>
                    <style>
                        .col-sm-2 {
                            text-align: right;
                        }
                    </style>
                    <div class="panel-body ">
                        <div class="tab-content col-md-12">
                            <div class="tab-pane active" id="stadium_edit">
                                <form method="post" id="js_upForm" action="{:url('api/Stadium/editStadium')}" enctype="multipart/form-data">
                                <input type="hidden" name="id" value="{$data.id}">

                                <table class="table table-bordered">
                                    <tbody>
                                    <tr>
                                        <td class="col-sm-2">名称：</td>
                                        <td class="col-sm-8">
                                            <input type="text" class="form-control required" id="title" name="title" placeholder="场馆名称" value="{$data.title}">
                                        </td>
                                    </tr>
                                    <tr>
                                    <td class="col-sm-2">封面图：</td>
                                    <td class="col-sm-10">
                                        <div class="clearfix ">
                                            <ul class="pull-left cat-img-holder" id="js_SimpleImgHolder">
                                                <li>
                                                    <img class="img-polaroid" style="height:100px;margin-right:10px;" src="{$data.post}">
                                                    <input type="hidden" name="post" value="{$data.post}">
                                                </li>
                                            </ul>
                                            <p class="pull-left">
                                                <a class="btn btn-default"  id="js_uploadSimpleImg"><i class="fa fa-plus mr5"></i>添加图片</a>         
                                            </p>         
                                            <div class="pull-left ml10" id="js_queenHolder" style="width:300px;"></div>
                                        </div>
                                        <p class="help-block form-group-tips">尺寸：345*172，JPG、PNG格式</p>
                                    </td>
                                </tr>
                                    <tr>
                                        <td class="col-sm-2">图片集：</td>
                                        <td class="col-sm-8" >
                                            <div id="imgs_s"></div>
                                            <p><code>注意：</code>若修改图片集，直接重新上传一次即可，新图集会自动替换旧图集。</p>
                                            <div id="fileUploadContent" class="fileUploadContent"></div>
                                            <input type="hidden" name="imgs" id="imgs" value="{$data.imgs}">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-2">简介：</td>
                                        <td class="col-sm-8" >
                                             <textarea id="intro" class="intro" type="text/plain" style="width:100%;height:200px;" name="intro" >{$data.intro}</textarea>
                                            <!--<textarea  class="intro" type="text/plain" style="width:100%;height:200px;" name="intro" >{$data.intro}</textarea>-->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-2">类型：</td>
                                        <td class="col-sm-8">
                                        
                                            <div class="col-sm-3">
                                                <select class="form-control" name="cate_id" id="cate_id"  >
                                                    <option value="">场馆类型</option>
                                                    {volist name="$stadium_type" id="vo"}
                                                    <option  value="{$vo.id}" {if condition="$vo.id ==$data.cate_id"}selected="selected"{/if}>{$vo.title}
                                                    </option>
                                                    {/volist}
                                                </select>
                                            </div>
                                         
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-2">联系电话：</td>
                                        <td class="col-sm-8">
                                            <input type="text" class="form-control required" id="tel" name="tel" placeholder="联系电话" value="{$data.tel}" >
                                          
                                        </td>
                                    </tr>
                                     <tr>
                                        <td class="col-sm-2">微信号：</td>
                                        <td class="col-sm-8">
        
                                            <input type="text" class="form-control required" id="wechat" name="wechat" placeholder="微信号" value="{$data.wechat}">
                                        </td>
                                    </tr>
                                    <tr>
                                    <td class="col-sm-2">省份：</td>
                                    <td class="col-sm-10">
                                        <select name="province" id="input_province" class="form-control">
                                        </select>
                                        <br/>
                                        <select name="city" id="input_city" class="form-control">
                                        </select>
                                        <br/>
                                        <select name="district" id="input_area" class="form-control">
                                        </select>
                                        <br/>
                                    </td>
                                </tr>
                                    <tr>
                                        <td class="col-sm-2">地址：</td>
                                        <td class="col-sm-8">
                                            <input type="text" class="form-control required" id="address" name="address" placeholder="详细地址" value="{$data.address}">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-2">预定链接：</td>
                                        <td class="col-sm-8">
                                            <input type="text" class="form-control required" id="booking_url" name="booking_url" placeholder="预定链接" value="{$data.booking_url}">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-2">关联课程：</td>
                                        <td class="col-sm-10">
                                            {volist name="$course" id="vo"}
                                            <div class="checkbox">
                                                <label>
                                                    {if condition="in_array($vo.id, $data.courseid)"}
                                                    <input type="checkbox" class="colored-success"  name="courseid[]"  value="{$vo.id}" checked="true">
                                                    {else /}
                                                    <input type="checkbox" class="colored-success"  name="courseid[]"  value="{$vo.id}">
                                                    {/if}
                                                    <span class="text"> {$vo.title}</span>
                                                </label>
                                            </div>
                                            {/volist}
                                        </td>
                                    </tr>
                                     <tr>
                                        <td>状态：</td>
                                        <td>
                                            <input type="radio" name="status" value="1" {if condition="$data.status==1"}checked="checked"{/if}> 开馆
                                            <input type="radio" name="status" value="2" {if condition="$data.status==2"}checked="checked"{/if}> 闭馆
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>排序：</td>
                                        <td>
                                            <div class="col-sm-3">
                                                <input type="text" name="sort"  placeholder="数字大的排前面" class="form-control " value="{$data.sort}">
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>是否推荐：</td>
                                        <td>
                                            <input {if condition="1==$data.is_recommend"}checked="checked"{/if}  type="radio" name="is_recommend"  value="1"> 推荐
                                            <input type="radio" {if condition="2==$data.is_recommend"}checked="checked"{/if}    name="is_recommend" value="2"> 不推荐
                                        </td>
                                    </tr>
                                   
                    
                                    <tr>
                                    <td></td>
                                        <td class="col-sm-10" colspan="2">
                                            <input class="btn btn-primary js_submit" type="button" value="保存">
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- /.content -->

</div>
{/block}

{block name="script"}

<script src="__STATIC__/admin/plugins/uploadify/jquery.uploadify.js" type="text/javascript"></script>
<script src="__STATIC__/admin/plugins/ueditor/ueditor.config.js?v=1.0.1" type="text/javascript" charset="utf-8"></script>
<script src="__STATIC__/admin/plugins/ueditor/ueditor.all.js?v=1.0.8" type="text/javascript" charset="utf-8"> </script>
<script src="__STATIC__/admin/plugins/ueditor/lang/zh-cn/zh-cn.js" type="text/javascript" charset="utf-8"></script>
<script src="__STATIC__/admin/area/area_data_source.js" type="text/javascript"></script>
<script src="/admin/area/area_demo.js" type="text/javascript"></script>
<script src="__STATIC__/admin/js/icheck.min.js"></script>

<!--上传图片-->
<script type="text/javascript" src="__STATIC__/admin/upload/js/fileUpload.js?v=1.0.1"></script>
<script>
$(function () {
   ue = UE.getEditor('intro');
 
});
  
$("#js_uploadSimpleImg").uploadify({
    'buttonText': '上传图片',
    'buttonClass': 'btn btn-default btn-sm fa fa-plus',
    'fileSizeLimit': '2MB',
    'fileTypeDesc'  : '请选择要上传的图片',
    'fileTypeExts'  : '*.gif; *.png; *.jpg; *.jpeg',
    'fileObjName'   : 'fileObj',
    'height'        : 40,
    'width'         : 80,
    'swf'           : '__STATIC__/admin/plugins/uploadify/uploadify.swf',
    'uploader'      : "{:url('/admin/upload/uploadImage')}",
    'onInit'        : function(obj){
        console.log('init', obj);
    },
    'onUploadSuccess' : function(file, data, response) {
        var result = JSON.parse(data);
        if(result.state == 'SUCCESS'){
            $("#js_SimpleImgHolder").removeClass("hidden").find("img").attr("src",result.url);
            $("#js_SimpleImgHolder").removeClass("hidden").find("input").val(result.url);
        }else{
            layer.alert(res.msg, {icon: 2});
        }
    }
});

$('.js_submit').on('click',function(){
  $("#js_upForm").submit();
});

$("#js_upForm").validate({
    submitHandler : function(){
        var url = $("#js_upForm").attr("action");
        $.ajax({
            url : url,
            type : "post",
            dataType : "json",
            data : $("#js_upForm").serialize(),
            success : function(res){
                if( res.errcode == 200 ){
                    layer.msg('修改成功',{icon:6,title:'温馨提示'},function () {
                        window.location =admin_url+"stadium/index";
                    })
                }else {
            
                    layer.msg('修改失败',{icon:5,title:'温馨提示'});
                }
            }
        });
    }
});
$(function () {
    //绑定
    $("#input_province").val("{$data.province_code}-{$data.province_name}" || '');
    $("#input_province").change();
    $("#input_city").val("{$data.city_code}-{$data.city_name}" || '');
    $("#input_city").change();
    $("#input_area").val("{$data.district_code}-{$data.district_name}" || '');

    var str = "{$data.imgs}";
    var imgs = str.split(",");
    var _html = '';
    imgs.forEach(function(value,index,array) {
        _html += '<img class="img-thumbnail" style="margin: 10px 5px;" src="'+ value +'">';
    });
    //console.log(_html);
    $("#imgs_s").html(_html);

    $("#fileUploadContent").initUpload({
        "uploadUrl":"{:url('/admin/upload/uploadImages')}",//上传文件信息地址
        "size":2048,//文件大小限制，单位kb,默认不限制
        "maxFileNumber":5,//文件个数限制，为整数
        //"filelSavePath":"",//文件上传地址，后台设置的根目录
        //"beforeUpload":beforeUploadFun,//在上传前执行的函数
        "onUpload":onUploadFun, //在上传后执行的函数
        //autoCommit:true,//文件是否自动上传
        "fileType":['png','jpg','jpeg']//文件类型限制，默认不限制，注意写的是文件后缀
    });
    function beforeUploadFun(opt){
        console.log(opt);
        opt.otherData =[{"name":"name","value":"zxm"}]; //带参数到后台
    }
    function onUploadFun(opt,data){
        if (data.errno == 0) {
            //console.log(data.data);
            $("input[name=imgs]").val(data.data);
            uploadTools.uploadSuccess(opt);//显示上传成功
        } else {
            uploadTools.uploadError(opt);//显示上传错误
        }
    }
});

</script>
{/block}