{extend name="common/layouts" /}
{block name="title"}{$sidename}{/block}

{block name="main"}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            {$sidename}
        </h1>
        <ol class="breadcrumb">
            <!-- <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li> -->
        </ol>
    </section>
    <section class="content">

        <div class="row">
            <div class="col-xs-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">教练课程</h3>
                    </div>
                    <div class="box-body">

                        <div id="toolbar" >
                            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#add_course" data-backdrop="static">
                                <span class="fa fa-plus" aria-hidden="true"></span> 新增课程
                            </button>
                            <button id="btn_delete" type="button" class="btn btn-danger">
                                <span class="fa fa-times" aria-hidden="true"></span> 批量删除
                            </button>
                        </div>

                        <table id="course_table" data-url="{:URL('/api/course/getCourseList')}" class="table table-striped table-bordered table-hover" ></table>

                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- 添加课程 start -->
    <div class="modal fade" id="add_course" style="color: #333;line-height:20px;font-size: 14px;" tabindex="-1" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog" style="width: 60%;margin-top: 100px !important;">
            <div class="modal-content">
                <div class="modal-header bordered-blue">
                    <button class="close" data-dismiss="modal"><span>&times;</span></button>
                    <h4 class="modal-title"><i class="fa fa-user"></i>新增课程</h4>
                </div>
                <div class="modal-body" style="margin-top: 10px !important;">
                    <form class="form-horizontal" method="post" id="form1" >
                        <div class="form-group">
                            <label for="demptment" class="col-sm-3 control-label" style="margin-right: -20px;">课程类型：</label>
                            <div class="col-sm-8">
                                <select class="form-control" name="cate_id" id="cate_id">
                                    <option value="">请选择</option>
                                    {volist name="$course_type" id="vo"}
                                        <option value="{$vo.id}">{$vo.title}</option>
                                    {/volist}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="truename" class="col-sm-3 control-label" style="margin-right: -20px;">课程名称：</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="title" name="title" placeholder="课程名称">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="truename" class="col-sm-3 control-label" style="margin-right: -20px;">课程简介：</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" name="sub_title" id="sub_title" style="height: 100px;"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="truename" class="col-sm-3 control-label" style="margin-right: -20px;">课程图文介绍:</label>
                            <div class="col-sm-8">
                                <textarea id="editor" class="ueditor"  name="intro" id="intro" style="width:100%;height:200px;"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="truename" class="col-sm-3 control-label" style="margin-right: -20px;">课程封面:</label>
                            <!-- <ul class="pull-left cat-img-holder hidden" id="js_ImgHolder">
                                <li>
                                    <img class="img-polaroid" style="height:100px;margin-right:10px;">
                                    <input type="hidden" name="pic">
                                </li>
                            </ul> -->
                            <div class="col-sm-8">
                                <input id="js_uploadImg" type="file">
                            </div>
                           
                        </div>
                        <div class="form-group">
                            <label for="truename" class="col-sm-3 control-label" style="margin-right: -20px;">价格：</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="price" name="price" placeholder="价格">
                            </div>
                        </div>
                        
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary pull-right" id="course_add" >添 加</button>
                </div>
            </div>
        </div>
    </div>
    <!-- 添加课程 end-->
</div>
{/block}
{block name="jss"}
<script src="__STATIC__/admin/plugins/ueditor/ueditor.config.js?v=1.0.1" type="text/javascript" charset="utf-8"></script>
<script src="__STATIC__/admin/plugins/ueditor/ueditor.all.js?v=1.0.8" type="text/javascript" charset="utf-8"> </script>
<script src="__STATIC__/admin/plugins/ueditor/lang/zh-cn/zh-cn.js" type="text/javascript" charset="utf-8"></script>
<script src="__STATIC__/admin/plugins/uploadify/jquery.uploadify.js" type="text/javascript"></script>
    <script>
        var YZL = {
            'URL': '/api/course'
        };


        $("#js_uploadImg").uploadify({
            'buttonText': '上传图片',
            'buttonClass': 'btn btn-default btn-sm fa fa-plus',
            'fileSizeLimit': '2MB',
            'fileTypeDesc'  : '请选择要上传的图片',
            'fileTypeExts'  : '*.gif; *.png; *.jpg; *.jpeg',
            'fileObjName'   : 'fileObj',
            'height'        : 40,
            'width'         : 80,
            'swf'           : '__STATIC__/admin/plugins/uploadify/uploadify.swf',
            'uploader'      : "{:url('api/upload/uploadImage')}",
            'onUploadSuccess' : function(file, data, response) {
            var result = JSON.parse(data);
            if(result.state){
                $("#js_ImgHolder").removeClass("hidden").find("img").attr("src",result.url);
                $("#js_ImgHolder").removeClass("hidden").find("input").val(result.url);
            }else{
                layer.alert('上传失败！', {icon: 2});
            }
    }
});
    </script>
    <script src="/admin/use/course.js"></script>

<script>
    $(function () {
        //实例化编辑器
        //建议使用工厂方法getEditor创建和引用编辑器实例，如果在某个闭包下引用该编辑器，直接调用UE.getEditor('editor')就能拿到相关的实例
        ue = UE.getEditor('editor');
    });
</script>
{/block}