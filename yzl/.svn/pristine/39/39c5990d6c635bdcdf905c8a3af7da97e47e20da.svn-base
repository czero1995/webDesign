{extend name="common/base"}
{block name="content-header"}
<link rel="stylesheet" href="__STATIC__/admin/plugins/select2/select2.min.css">
    <h1>
        {$module_names[0]}
        <small>
        {$module_names[1]}</small>
    </h1>
    <ol class="breadcrumb">
        {volist name="module_names" id="vo"}
            <li {if condition="$module_nums==$key"}class="active"{/if}>{if condition="0==$key"}<i class="fa fa-dashboard"></i>{/if} {$vo}</li>
        {/volist}
    </ol>
{/block}

{block name="content"}
        <div class="container-fluid">
            <div class="pull-right">
                <a href="javascript:history.go(-1)" data-toggle="tooltip" title="" class="btn btn-default" data-original-title="返回管理员列表"><i class="fa fa-reply"></i></a>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-list"></i> 编辑课程信息</h3>
                </div>
                <div class="panel-body " id="editTag">
                 <form method="post" id="js_upForm" action="{:url('admin/tags/edit')}" enctype="multipart/form-data">
                    <div class="tab-content col-md-12">
                        <div class="tab-pane active" id="couserEdit">
                        <input type="hidden" name="id" value="{$data.id}">
                            <table class="table table-bordered">
                                <tbody>
                                <tr>
                                    <td class="col-sm-2">轮播图类型：</td>
                                    <td class="col-sm-10">
                                        <select  class="form-control" name="type" id="type">
                                            <option value="0">请选择</option>
                                            <option {if condition="1==$data.type"}selected="selected" {/if} value="1">场馆</option>
                                            <option {if condition="2==$data.type"}selected="selected" {/if} value="2">教练</option>
                                            <option {if condition="3==$data.type"}selected="selected" {/if} value="3">课程</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-sm-2">标签名: </td>
                                    <td class="col-sm-10">
                                        <input type="text" class="form-control required" id="name" name="name" value="{$data.name}" placeholder="">
                                    </td>
                                </tr>
                                <tr>
                                    <td>是否推荐：</td>
                                    <td >
                                        <input  type="radio" name="status" {if condition="1==$data.status"}checked="checked" {/if} value="1"> 启用
                                        <input type="radio"   name="status" {if condition="2==$data.status"}checked="checked" {/if} value="2"> 禁用
                                    </td>
                                </tr>
                                </tbody>
                                <tfoot>
                                <tr>
                                    <td></td>
                                    <td class="text-left">
                                        <input class="btn btn-primary js_submit" type="button" value="保存">
                                    </td>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                   </form>
                </div>
            </div>
        </div>

    </section>
</div>
{/block}
{block name="script"}
<script>
 $('.js_submit').on('click',function(){
  $("#js_upForm").submit();
});

$("#js_upForm").validate({
    submitHandler : function(){
        var url = $("#js_upForm").attr("action");
        $.ajax({
            url : url,
            type : "post",
            dataType : "json",
            data : $("#js_upForm").serialize(),
            success : function(res){
                if( res.status == true ){
                    layer.msg('修改成功',{icon:6,title:'温馨提示'},function () {
                        window.location =admin_url+"tags/index";
                    })
                }else {
            
                    layer.msg('修改失败',{icon:5,title:'温馨提示'});
                }
            }
        });
    }
});
</script>

{/block}