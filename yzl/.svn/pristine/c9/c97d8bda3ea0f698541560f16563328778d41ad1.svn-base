{extend name="common/layouts" /}
{block name="title"}{$sidename}{/block}

{block name="csss"}
<link rel="stylesheet" href="/admin/skins/all.css">
{/block}

{block name="main"}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            {$sidename}
            <!--<small>Control panel</small>-->
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
            <li class="">教练管理</li>
            <li class="active">教练类型</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-xs-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">教练类型</h3>
                    </div>
                    <div class="box-body">

                        <div id="toolbar" >
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add_coach_type" data-backdrop="static">
                                <span class="fa fa-plus" aria-hidden="true"></span> 新增类型
                            </button>
                           <!--  <button id="btn_delete" type="button" class="btn btn-danger">
                                <span class="fa fa-times" aria-hidden="true"></span> 批量删除
                            </button> -->
                        </div>

                        <table id="type_table" data-url="{:URL('/admin/admin/getCoachType')}" class="table table-striped table-bordered table-hover" ></table>

                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- /.content -->
    <!-- 添加教练 start -->
    <div class="modal fade" id="add_coach_type" style="color: #333;line-height:20px;font-size: 14px;" tabindex="-1" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog" style="width: 500px;margin-top: 150px !important;">
            <div class="modal-content">
                <div class="modal-header bordered-blue">
                    <button class="close" data-dismiss="modal"><span>&times;</span></button>
                    <h4 class="modal-title"><i class="fa fa-home"></i> 类型</h4>
                </div>
                <div class="modal-body" style="margin-top: 10px !important;">
                    <form class="form-horizontal" method="post" id="form1">
                        <div class="form-group">
                            <label for="title" class="col-sm-3 control-label" style="margin-right: -20px;">类型名称：</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="title" name="title" >
                                <span class="help-block m-b-none"><i class="fa fa-info-circle"></i> 多个类型名称可以用英文逗号隔开<br><code>例：瑜伽,足球,XXX</code></span>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary pull-right" id="coach_type_add" >添 加</button>
                </div>
            </div>
        </div>
    </div>
    <!-- 添加教练 end-->

    <!-- 编辑教练 start -->
    <div class="modal fade" id="edit_coach_type" style="color: #333;line-height:20px;font-size: 14px;" tabindex="-1" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog" style="width: 500px;margin-top: 150px !important;">
            <div class="modal-content">
                <div class="modal-header bordered-blue">
                    <button class="close" data-dismiss="modal"><span>&times;</span></button>
                    <h4 class="modal-title"><i class="fa fa-edit"></i> 修改类型</h4>
                </div>
                <div class="modal-body" style="margin-top: 10px !important;">
                    <form class="form-horizontal" method="post" id="form2">
                        <div class="form-group">
                            <label for="etitle" class="col-sm-3 control-label" style="margin-right: -20px;">类型名称：</label>
                            <div class="col-sm-8">
                                <input type="hidden" id="eid" name="eid">
                                <input type="text" class="form-control" id="etitle" name="etitle" >
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary pull-right" id="coach_type_edit" >提 交</button>
                </div>
            </div>
        </div>
    </div>
    <!-- 编辑教练 end-->
</div>
{/block}

{block name="jss"}

<script src="/admin/use/coach_type.js"></script>

{/block}