body{
    background: #EFEFEF;
    p{
        margin: 0;
        padding: 0;
    }
}
.stadium-item{
    background: #FFFFFF;
    padding: 0.3rem;
    margin-bottom: 0.2rem;
    img{
        vertical-align: middle;
    }
    .phone-img{
        float: right;
    }
    span{
        font-family: PingFangSC-Regular;
        margin-left: 0.2rem;
        font-size: 0.24rem;
        color: #666666;
        letter-spacing: 1px;
        vertical-align: middle;
    }
}
.stadium-introduce {
    background: #FFFFFF;
    padding: 0.3rem;
    img {
        width: 100%;
        height: 3.72rem;
    }
    p{
        font-family: PingFangSC-Regular;
        font-size: 0.26rem;
        color: #666666;
        letter-spacing: 0.78px;
        line-height: 44px;
        padding-top: 0.23rem;
        text-align: justify;
    }
}

.stadiumDetail-tabBox {
    margin-top: 0.2rem;
    margin-bottom:1.1rem;
    .tabBox-bar {
        height: 0.88rem;
        background: #FFFFFF;
        line-height: 0.88rem;
        border-bottom: 1px solid #CCCCCC;
        p {
            width: 50%;
            float: left;
            font-family: PingFangSC-Regular;
            font-size: 0.28rem;
            color: #000000;
            text-align: center;
            letter-spacing: 0.82px;
        }
        .active{
            border-bottom: 4px solid #000000;
            font-weight: bold;
        }
    }
    .tabBox-lessonService {
        .lessonService-item {
            margin-bottom: 0.2rem;
            background: #FFFFFF;
            .lesson-box {
                padding: 0.3rem;
                border-bottom: 1px solid #CCCCCC;
                padding-bottom: 0.32rem;
                .lesson-text {
                    float: left;
                    width: 64%;
                    .lesson-name {
                        font-size: 0.28rem;
                        color: #000000;
                        letter-spacing: 0.82px;
                        margin-bottom: 0.25rem;
                    }
                    .lesson-title {
                        font-size: 0.28rem;
                        color: #000000;
                        letter-spacing: 0.82px;
                    }
                    .lesson-content {
                        font-size: 0.24rem;
                        color: #666666;
                        letter-spacing: 0.71px;
                    }
                    .lesson-price {
                        font-family: PingFangSC-Medium;
                        font-size: 0.26rem;
                        color: #FF0000;
                        letter-spacing: 0.76px;
                        margin-top: 0.3rem;
                    }
                }
                .lesson-img {
                    float: right;
                    width: 2.4rem;
                    height: 2.4rem;
                }
            }
            .lesson-label {
                height: 0.8rem;
                margin-left: 0.3rem;
                display: flex;
                .label-item {
                    margin-right: 0.2rem;
                    padding-left: 0.1rem;
                    padding-right: 0.1rem;
                    border-radius: 100px;
                    border: 1px solid #C9C9C9;
                    height: 0.4rem;
                    line-height: 0.4rem;
                    font-size: 0.24rem;
                    text-align: center;
                    color: #000000;
                    letter-spacing: 0.71px;
                    margin-top: 0.2rem;
                }
            }
        }
    }
    .coach-recommend {
        margin-bottom: 0.8rem;
        p {
            margin: 0;
            padding: 0;
        }
        .coach-item {
            margin-bottom: 0.2rem;
            background: #ffffff;
            padding: 0.3rem;
            .coach-img {
                float: left;
                border-radius: 1rem;
                width: 1rem;
                height: 1rem;
            }
            .coach-info {
                //              float: left;
                margin-left: 1.3rem;
                .coach-name {
                    float: left;
                    font-family: PingFangSC-Medium;
                    font-size: 0.26rem;
                    color: #000000;
                    letter-spacing: 0.76px;
                }
                .coach-sex-img {
                    margin-left: 0.2rem;
                    display: inline-block;
                }
                .coach-address {
                    float: right;
                    font-family: PingFangSC-Light;
                    font-size: 0.24rem;
                    color: #666666;
                    letter-spacing: 1px;
                    img {
                        margin-right: 0.1rem;
                    }
                }
                .coach-introduce {
                    padding-top: 0.22rem;
                    font-size: 0.26rem;
                    color: #666666;
                    letter-spacing: 0.76px;
                }
                .coach-label {
                    margin-top: 0.28rem;
                    display: flex;
                    justify-content: flex-start;
                    .label-item {
                        margin-right: 0.2rem;
                        padding-left: 0.2rem;
                        padding-right: 0.2rem;
                        border-radius: 100px;
                        border: 1px solid #838383;
                        height: 0.4rem;
                        font-size: 0.24rem;
                        text-align: center;
                        line-height: 0.4rem;
                        color: #000000;
                        letter-spacing: 0.71px;
                    }
                }
            }
        }
        .coachMore{
            height: 0.5rem;
            position: relative;
            background: #ffffff;
            //          width: 100%;
            border: 1px solid #CCCCCC;
            margin-top: -0.2rem;
            img{
                position: absolute;
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
                margin: auto;
                height: 0.18rem;
                width: 0.3rem;

            }
        }
    }

}
.preBtn{
    background: #000000;
    height: 0.88rem;
    position: fixed;
    bottom: 0;
    width: 100%;
    font-family: PingFangSC-Medium;
    font-size: 0.28rem;
    color: #FFFFFF;
    line-height: 0.88rem;
    text-align: center;
}
