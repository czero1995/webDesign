{extend name="common/base"}
{block name="content-header"}
  <link rel="stylesheet" href="__STATIC__/admin/plugins/select2/select2.min.css">
    <h1>
        {$module_names[0]}
        <small>
        {$module_names[1]}</small>
    </h1>
    <ol class="breadcrumb">
        {volist name="module_names" id="vo"}
            <li {if condition="$module_nums==$key"}class="active"{/if}>{if condition="0==$key"}<i class="fa fa-dashboard"></i>{/if} {$vo}</li>
        {/volist}
    </ol>
{/block}

{block name="content"}

        <div class="row">
            <div class="container-fluid">
                <div class="pull-right">
                    <a href="javascript:history.go(-1)" data-toggle="tooltip" title="" class="btn btn-default" data-original-title="返回列表"><i class="fa fa-reply"></i></a>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-list"></i> 新增场馆</h3>
                    </div>
                    <div class="panel-body ">
                        <div class="tab-content col-md-12">
                            <div class="tab-pane active" id="stadium_add">
                            <form method="post" id="js_upForm" action="{:url('api/stadium/addStadium')}" enctype="multipart/form-data">
                                <table class="table table-bordered">
                                    <tbody>
                                    <tr>
                                        <td class="col-sm-2">名称：</td>
                                        <td class="col-sm-8">
                                            <input type="text" class="form-control required" id="title" name="title" placeholder="场馆名称" v-model="formData.title" >
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-2">封面图：</td>
                                        <td class="col-sm-10">
                                            <div class="clearfix ">
                                                <ul class="pull-left cat-img-holder hidden" id="js_SimpleImgHolder">
                                                    <li>
                                                        <img class="img-polaroid" style="height:100px;margin-right:10px;">
                                                        <input type="hidden" name="post">
                                                    </li>
                                                </ul>
                                                <p class="pull-left">
                                                    <a class="btn btn-default" id="js_uploadSimpleImg" href="javascript:;"><i class="fa fa-plus mr5"></i>添加图片</a>
                                                </p>           
                                                <div class="pull-left ml10" id="js_queenHolder" style="width:300px;"></div>
                                            </div>
                                            <p class="help-block form-group-tips">备注：员工头像图片。尺寸：100*100，JPG、PNG格式</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-2">简介：</td>
                                        <td class="col-sm-8" >
                                            <textarea id="intro" class="intro" type="text/plain" style="width:100%;height:200px;" name="intro" v-model="formData.intro"></textarea>
                                            <!--<textarea  class="intro" type="text/plain" style="width:100%;height:200px;" name="intro" v-model="formData.intro"></textarea>-->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-2">类型：</td>
                                        <td class="col-sm-8">
                                            <div class="col-sm-3">
                                                <select class="form-control" name="cate_id" id="cate_id" v-model="formData.cate_id">
                                                    <option value="">场馆类型</option>
                                                    {volist name="$stadium_type" id="vo"}
                                                    <option value="{$vo.id}">{$vo.title}</option>
                                                    {/volist}
                                                </select>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-2">联系电话：</td>
                                        <td class="col-sm-8">
                                            <input type="text" class="form-control required" id="tel" name="tel" placeholder="联系电话" v-model="formData.tel" >
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-2">微信号：</td>
                                        <td class="col-sm-8">
                                            <input type="text" class="form-control required" id="wechat" name="wechat" placeholder="微信号" v-model="formData.wechat" >
                                        </td>
                                    </tr>
                                    <tr>
                                    <td class="col-sm-2">省份：</td>
                                    <td class="col-sm-10">
                                        <select name="province" id="input_province" class="form-control">
                                        </select>
                                        <br/>
                                        <select name="city" id="input_city" class="form-control">
                                        </select>
                                        <br/>
                                        <select name="district" id="input_area" class="form-control">
                                        </select>
                                        <br/>
                                    </td>
                                </tr>
                                    <tr>
                                        <td class="col-sm-2">地址：</td>
                                        <td class="col-sm-8">
                                            <input type="text" class="form-control required" id="address" name="address" placeholder="详细地址" v-model="formData.address" >
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-2">预定链接：</td>
                                        <td class="col-sm-8">
                                            <input type="text" class="form-control required" id="booking_url" name="booking_url" placeholder="预定链接" v-model="formData.booking_url" >
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-2">关联课程：</td>
                                        <td class="col-sm-8">
                                            {volist name="$course" id="vo"}
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" class="colored-success" id="course"  name="courseid[]"  value="{$vo.id}" >
                                                    <span class="text"> {$vo.title}</span>
                                                </label>
                                            </div>
                                            {/volist}
                                        </td>
                                    </tr>
                                     <tr>
                                        <td>状态：</td>
                                        <td>
                                            <input checked="checked" type="radio" name="status"  value="1"> 开馆
                                            <input type="radio"    name="status" value="2"> 闭馆
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>是否推荐：</td>
                                        <td>
                                            <input checked="checked" type="radio" name="is_recommend"  value="1"> 推荐
                                            <input type="radio"    name="is_recommend" value="2"> 不推荐
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-sm-10" colspan="2">
                                            <button class="btn btn-primary pull-right" id="stadium_adds" @click="stadium_add">提 交</button>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- /.content -->

</div>
{/block}

{block name="script"}
<script src="__STATIC__/admin/plugins/uploadify/jquery.uploadify.js" type="text/javascript"></script>
<script src="__STATIC__/admin/plugins/ueditor/ueditor.config.js" type="text/javascript" charset="utf-8"></script>
<script src="__STATIC__/admin/plugins/ueditor/ueditor.all.min.js" type="text/javascript" charset="utf-8"> </script>
<script src="__STATIC__/admin/plugins/ueditor/lang/zh-cn/zh-cn.js" type="text/javascript" charset="utf-8"></script>
<script src="__STATIC__/admin/area/area_data_source.js" type="text/javascript"></script>
<script src="/admin/area/area_demo.js" type="text/javascript"></script>

<script>
$(function () {
    ue = UE.getEditor('intro');

});


$("#js_uploadSimpleImg").uploadify({
    'buttonText': '上传图片',
    'buttonClass': 'btn btn-default btn-sm fa fa-plus',
    'fileSizeLimit': '2MB',
    'fileTypeDesc'  : '请选择要上传的图片',
    'fileTypeExts'  : '*.gif; *.png; *.jpg; *.jpeg',
    'fileObjName'   : 'fileObj',
    'height'        : 40,
    'width'         : 80,
    'swf'           : '__STATIC__/admin/plugins/uploadify/uploadify.swf',
    'uploader'      : "{:url('/admin/upload/uploadImage')}",
    'onInit'        : function(obj){
        console.log('init', obj);
    },
    'onUploadSuccess' : function(file, data, response) {
        var result = JSON.parse(data);
        if(result.state == 'SUCCESS'){
            $("#js_SimpleImgHolder").removeClass("hidden").find("img").attr("src",result.url);
            $("#js_SimpleImgHolder").removeClass("hidden").find("input").val(result.url);
        }else{
            layer.alert(res.msg, {icon: 2});
        }
    }
});
$('.js_submit').on('click',function(){
  $("#js_upForm").submit();
});

$("#js_upForm").validate({
    submitHandler : function(){
        var url = $("#js_upForm").attr("action");
        $.ajax({
            url : url,
            type : "post",
            dataType : "json",
            data : $("#js_upForm").serialize(),
            success : function(res){
                if( res.errcode == 200 ){
                    layer.msg('添加成功',{icon:6,title:'温馨提示'},function () {
                        window.location =admin_url+"stadium/index";
                    })
                }else {
            
                    layer.msg('添加失败',{icon:5,title:'温馨提示'});
                }
            }
        });
    }
});
</script>
{/block}