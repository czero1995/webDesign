{extend name="common/base"}
{block name="content-header"}
<link rel="stylesheet" href="__STATIC__/admin/plugins/select2/select2.min.css">
    <h1>
        {$module_names[0]}
        <small>
        {$module_names[1]}</small>
    </h1>
    <ol class="breadcrumb">
        {volist name="module_names" id="vo"}
            <li {if condition="$module_nums==$key"}class="active"{/if}>{if condition="0==$key"}<i class="fa fa-dashboard"></i>{/if} {$vo}</li>
        {/volist}
    </ol>
{/block}

{block name="content"}
        <div class="container-fluid">
            <div class="pull-right">
                <a href="javascript:history.go(-1)" data-toggle="tooltip" title="" class="btn btn-default" data-original-title="返回管理员列表"><i class="fa fa-reply"></i></a>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-list"></i> 添加课程</h3>
                </div>
                <div class="panel-body ">
                
                    <div class="tab-content col-md-12">
                        <div class="tab-pane active" >
                           <form method="post" id="js_upForm" action="{:url('api/Course/addCourse')}" enctype="multipart/form-data">
                            <table class="table table-bordered">
                                <tbody>
                                <tr>
                                    <td class="col-sm-2">封面图：</td>
                                    <td class="col-sm-10">
                                        <div class="clearfix ">
                                            <ul class="pull-left cat-img-holder hidden" id="js_SimpleImgHolder">
                                                <li>
                                                    <img class="img-polaroid" style="height:100px;margin-right:10px;">
                                                    <input type="hidden" name="post">
                                                </li>
                                            </ul>
                                            <p class="pull-left">
                                                <a class="btn btn-default" id="js_uploadSimpleImg"><i class="fa fa-plus mr5"></i>添加图片</a>         
                                            </p>           
                                            <div class="pull-left ml10" id="js_queenHolder" style="width:300px;"></div>
                                        </div>
                                        <p class="help-block form-group-tips">备注：课程图片。尺寸：100*100，JPG、PNG格式</p>
                                    </td>
                                </tr>

                                <tr>
                                    <td class="col-sm-2">场馆处封面图：</td>
                                    <td class="col-sm-10">
                                        <div class="clearfix ">
                                            <ul class="pull-left cat-img-holder hidden" id="js_SimpleImgHolders">
                                                <li>
                                                    <img class="img-polaroid" style="height:100px;margin-right:10px;">
                                                    <input type="hidden" name="spost">
                                                </li>
                                            </ul>
                                            <p class="pull-left">
                                                <a class="btn btn-default" id="js_uploadSimpleImgs"><i class="fa fa-plus mr5"></i>添加图片</a>
                                            </p>
                                            <div class="pull-left ml10" id="js_queenHolders" style="width:300px;"></div>
                                        </div>
                                        <p class="help-block form-group-tips">备注：场馆处显示图片。尺寸：100*100，JPG、PNG格式</p>
                                    </td>
                                </tr>
                
                                <tr>
                                    <td class="col-sm-2">课程名称：</td>
                                    <td class="col-sm-10">
                                         <input type="text" class="form-control required" id="title" name="title"  placeholder="">
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-sm-2">课程类型：</td>
                                    <td class="col-sm-10">
                                        <select class="form-control" name="cate_id" id="cate_id">
                                            <option value="">请选择</option>
                                            {volist name="$course_type" id="vo"}
                                                <option value="{$vo.id}">{$vo.title}</option>
                                            {/volist}
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-sm-2">课程简介：</td>
                                    <td class="col-sm-10">
                                        <textarea class="form-control required" name="sub_title" id="sub_title" style="height: 100px;"></textarea>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-sm-2">图文介绍：</td>
                                    <td class="col-sm-10">
                                          <textarea id="editor" class="intro" type="text/plain" style="width:100%;height:200px;" name="intro" ></textarea>
                                         <!--<textarea class="intro" type="text/plain" style="width:100%;height:200px;" name="intro" ></textarea>-->
                                    </td>
                                </tr>
                                 <tr>
                                    <td class="col-sm-2">价格: </td>
                                    <td class="col-sm-10">
                                        <input type="text" class="form-control required" id="price" name="price" placeholder="">
                                    </td>
                                </tr>
                                <tr>
                                    <td>是否推荐：</td>
                                    <td >
                                        <input checked="checked"  type="radio" name="is_recommend"  value="1"> 推荐
                                        <input type="radio"   name="is_recommend" value="2"> 不推荐
                                    </td>
                                </tr>
                                </tbody>
                                <tfoot>
                                <tr>
                                    <td></td>
                                    <td class="text-left">
                                        <input class="btn btn-primary js_submit" type="button" value="保存">
                                    </td>
                                </tr>
                                </tfoot>
                                </table>
                            </form>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>

    </section>
</div>
{/block}
{block name="script"}
<script src="__STATIC__/admin/plugins/uploadify/jquery.uploadify.js" type="text/javascript"></script>
<script src="__STATIC__/admin/plugins/ueditor/ueditor.config.js" type="text/javascript" charset="utf-8"></script>
<script src="__STATIC__/admin/plugins/ueditor/ueditor.all.min.js" type="text/javascript" charset="utf-8"> </script>
<script src="__STATIC__/admin/plugins/ueditor/lang/zh-cn/zh-cn.js" type="text/javascript" charset="utf-8"></script>
<script>
$(function () {
    ue = UE.getEditor('editor');
   
});
//课程图片
$("#js_uploadSimpleImg").uploadify({
    'buttonText': '上传图片',
    'buttonClass': 'btn btn-default btn-sm fa fa-plus',
    'fileSizeLimit': '2MB',
    'fileTypeDesc'  : '请选择要上传的图片',
    'fileTypeExts'  : '*.gif; *.png; *.jpg; *.jpeg',
    'fileObjName'   : 'fileObj',
    'height'        : 40,
    'width'         : 80,
    'swf'           : '__STATIC__/admin/plugins/uploadify/uploadify.swf',
    'uploader'      : "{:url('/admin/upload/uploadImage')}",
    'onInit'        : function(obj){
        console.log('init', obj);
    },
    'onUploadSuccess' : function(file, data, response) {
        var result = JSON.parse(data);
        if(result.state == 'SUCCESS'){
            $("#js_SimpleImgHolder").removeClass("hidden").find("img").attr("src",result.url);
            $("#js_SimpleImgHolder").removeClass("hidden").find("input").val(result.url);
        }else{
            layer.alert(res.msg, {icon: 2});
        }
    }
});
//场馆处显示图片
$("#js_uploadSimpleImgs").uploadify({
    'buttonText': '上传图片',
    'buttonClass': 'btn btn-default btn-sm fa fa-plus',
    'fileSizeLimit': '2MB',
    'fileTypeDesc'  : '请选择要上传的图片',
    'fileTypeExts'  : '*.gif; *.png; *.jpg; *.jpeg',
    'fileObjName'   : 'fileObj',
    'height'        : 40,
    'width'         : 80,
    'swf'           : '__STATIC__/admin/plugins/uploadify/uploadify.swf',
    'uploader'      : "{:url('/admin/upload/uploadImage')}",
    'onInit'        : function(obj){
        console.log('init', obj);
    },
    'onUploadSuccess' : function(file, data, response) {
        var result = JSON.parse(data);
        if(result.state == 'SUCCESS'){
            $("#js_SimpleImgHolders").removeClass("hidden").find("img").attr("src",result.url);
            $("#js_SimpleImgHolders").removeClass("hidden").find("input").val(result.url);
        }else{
            layer.alert(res.msg, {icon: 2});
        }
    }
});

$('.js_submit').on('click',function(){
  $("#js_upForm").submit();
});

$("#js_upForm").validate({
    submitHandler : function(){
        var url = $("#js_upForm").attr("action");
        $.ajax({
            url : url,
            type : "post",
            dataType : "json",
            data : $("#js_upForm").serialize(),
            success : function(res){
                if( res.errcode == 200 ){
                    layer.msg('添加成功',{icon:6,title:'温馨提示'},function () {
                        window.location =admin_url+"course/index";
                    })
                }else {
            
                    layer.msg('添加失败',{icon:5,title:'温馨提示'});
                }
            }
        });
    }
});
</script>

{/block}