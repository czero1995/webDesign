<view class="CarListBox">
  <view class='CarList' wx:for="{{CarList}}">
    <icon wx:if="{{item.selected}}" type="success" color="red" data-index="{{index}}"  class="cart-pro-select" bindtap="selectList"/>
    <icon wx:else type="circle" class="cart-pro-select" data-index="{{index}}" bindtap="selectList"/>
    <image src='{{item.goods_thumb}}'></image>
    <view class='Car'>
      <text class='h2'>{{item.goods_name}}</text>
      <text class='num'>X {{item.goods_number}}</text>
      <text class='pri TextColor'>￥{{item.present_price}}</text>
    </view>
  </view>

  
</view>

<view class='NavSub'>
  <icon wx:if="{{selectAllStatus}}" type="success_circle" color="#000" class="total-select" bindtap="selectAll"/>
  <icon wx:else type="circle" color="#000" class="total-select" bindtap="selectAll"/>
  <view class='total'>合计：￥<text>{{totalPrice}}</text></view>
  <view class='delete'>删除选中</view>
  <text class='pay BtnColor' bindtap="GenerateOrders">购买</text>
</view>
 