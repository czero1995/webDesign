<!--index.wxml-->
<view class="container">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-active-color="#fff">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item.img_url}}" class="slide-image" width="355" height="150"/>
      </swiper-item>
    </block>
  </swiper>

  <view class='ProList'>
    <view class='ListBox' wx:for="{{ProList}}">
      <navigator url="/pages/Details/Details?id={{item.id}}" hover-class="navigator-hover">
        <image src='{{item.goods_thumb}}'></image>
        <text class='Title'>{{item.goods_name}}</text>
        <text class='Pri TextColor'>{{item.present_price}}</text>
      </navigator>
    </view>
  </view>
  <view class='msg' hidden="{{loading}}">
        加载中...
  </view>
  <view class='msg' hidden="{{msg}}">已经到底了</view>
</view>