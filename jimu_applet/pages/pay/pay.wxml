<view class="">
  <view class=''>
    <navigator url="../address/address">
        <view wx:if="{{hasAddress}}" class="AddCar">
          <view class="NaClass">
            <icon type="success" size="20" color="#2670df"/>
            <view class="Text">
              <text><text>{{address.phone}}</text>收货人：{{address.name}}</text>
              <text class="text">收货地址：{{address.detail}}</text>
            </view>
          </view>
        </view>
        
        <view wx:else class="orders-no-address">
          <icon type="success" size="20" color="#ccc"/>
          <text>添加收货地址</text>
        </view>
    </navigator>
  </view>

  <view class='CarList' wx:for="{{orders.goods_list}}">
    <image src='{{item.goods_thumb}}'></image>
    <view class='Car'>
      <text class='h2'>{{item.goods_name}}</text>
      <text class='num'>X {{item.buy_number}}</text>
      <text class='pri TextColor'>￥{{item.present_price}}</text>
    </view>
  </view>


</view>