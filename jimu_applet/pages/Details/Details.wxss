/* pages/Details/Details.wxss */
.slide-image{
  width: 100%;
}

.ProDescription{
  background: #fff;
  margin: 20rpx 0;
  padding: 20rpx;
}
.ProDescription text{
  display: block;
  font: normal 26rpx/35rpx "微软雅黑";
}
.ProDescription .h2{
  color: #333;
  font-size: 28rpx;
  margin-bottom: 15rpx;
}
.ProDescription .p{
  color: #666;
  margin-bottom: 30rpx;
}
.ProDescription .Pri{
  text-align: right;
}

.DetBox{
  background: #fff;
  padding-bottom: 120rpx;
}
.DetBox .title{
  font: normal 32rpx/50rpx "微软雅黑";
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  display: block;
}
.DetBox .Det{
  margin-top: 20rpx;
  padding: 20rpx;
  font: normal 26rpx/35rpx "微软雅黑";
}
.DetBox .Det text{
  display: block;
}
.DetBox .Det img{
  display: block;
  width: 100%;
}

.NavBox{
  position: fixed;
  left: 0;
  bottom:0;
  width: 100%;
  background: #fff;
  display: flex;
  justify-content: flex-start;
  background: #ccc;
}
.NavBox navigator, .NavBox text{
  display: block;
  width: 50%;
  text-align: center;
  font: normal 34rpx/100rpx "微软雅黑";
  color: #fff;
}
.JoinCarColor{
  background: #ffa200;
}


/****/

.JoinCarMask{
  position: fixed;
  left: 0;
  top:0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
}
.JoinCar{
  background: #fff;
  position: fixed;
  left: 0;
  bottom: -536px;
  width: 100%;
}
.hidden{
  display: none;
}
.show{
  display: block
}


.Car{
  display: flex;
  justify-content: flex-start;
  padding: 15rpx;
  border-bottom: 1rpx solid #999;
}
.JoinCar image{
  width: 130rpx;
  height: 130rpx;
  margin-right: 15rpx;
}
.JoinCarText text{
  display: block;
  font: normal 28rpx/40rpx "微软雅黑";
}
.JoinCarText .title{
  margin-bottom: 15rpx;
}
.JoinCarText .p{

}
.numBox{
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
}
.numBox text{
  display: block;
  font: normal 28rpx/40rpx "微软雅黑";
  height: 40rpx;
}
.num{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  text-align: center;
}
.num text{
  border: 1rpx solid #ccc;
  font: normal 28rpx/40rpx "微软雅黑";
  display: block;
  height: 40rpx;
  width: 40rpx;
}
.num input{
  width: 60rpx;
  border: 1rpx solid #ccc;
  height: 40rpx;
  min-height: 40rpx;
  font: normal 28rpx/40rpx "微软雅黑";
}

.CarBtn{
  width: 100%;
  height: 80rpx;
  text-align: center;
  font: normal 32rpx/80rpx "微软雅黑";
  color: #fff;
}







