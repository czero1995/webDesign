<view class="Box">

  <view class='ListSub'>
    <scroll-view scroll-y>
      <view class="{{curIndex === index?'TextColor':''}}" wx:for="{{categoryList}}" wx:key="index" data-id="{{item.id}}" data-index="{{index}}" bindtap='swithtab'>{{item.cat_name}}</view>
    </scroll-view>
  </view>

  <view class='ListBox'>
    <view class='list' wx:for="{{ProList}}">
      <navigator url='/pages/Details/Details?id={{item.id}}'>
        <image src='{{item.goods_thumb}}' mode='widthFix'></image>
        <view class='ListText'>
          <text class='title'>{{item.goods_name}}</text>
          <text class='Pri TextColor'>ï¿¥{{item.present_price}}</text>
        </view>
      </navigator>
    </view>
    
  </view>
</view>